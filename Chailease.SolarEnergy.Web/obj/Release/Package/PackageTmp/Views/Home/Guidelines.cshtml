    <script>
        $(function () {
            $('body').scrollspy({ target: '#list-example' });

            //hide or show password
            $('.js-hide-password').on('click', function () {
                var $this = $(this),
                    $password_field = $this.prev('input');
                ('password' == $password_field.attr('type')) ? $password_field.attr('type', 'text') : $password_field.attr('type', 'password');
                $(this).toggleClass("hide-password-icon");
                $password_field.putCursorAtEnd();
            });
            jQuery.fn.putCursorAtEnd = function () {
                return this.each(function () {
                    if (this.setSelectionRange) {
                        var len = $(this).val().length * 2;
                        this.setSelectionRange(len, len);
                    } else {
                        $(this).val($(this).val());
                    }
                });
            };

            /* 輸入框清除內容按鈕*/
            $(".form-control.has-btn-clear").on("keydown", function () {
                let btn = $(this).parent().find(".js-input-btn-clear");
                btn.fadeIn();
            });

            $(".js-input-btn-clear").on("click", function () {
                $(this).parent().find("input").val("");
                $(this).fadeOut();
            });

            /* select event*/
            $("#sourceEtc").fadeOut(10);
            $("#sourceSelect").on("change", function () {
                var type = $(this).find(":selected").val();
                if (type === "etc") {
                    $("#sourceEtc").fadeIn();
                } else {
                    $("#sourceEtc").fadeOut();
                }
            });

            /* 驗證碼倒數 */
            var timerInterval;
            function startTimer(duration, display) {
                var timer = duration, minutes, seconds;
                timerInterval = setInterval(function () {
                    minutes = parseInt(timer / 60, 10);
                    seconds = parseInt(timer % 60, 10);
                    minutes = minutes < 10 ? "0" + minutes : minutes;
                    seconds = seconds < 10 ? "0" + seconds : seconds;
                    display.text(minutes + ":" + seconds);
                    if (--timer < 0) {
                        // timer = duration;
                        clearInterval(timerInterval);
                    }
                }, 1000);
            }

            var limitMinutes = 60 * 5,
                display = $('#countdown');
            startTimer(limitMinutes, display);


            // upload event & upload file preview
            $(".js-input-file").on('change', function () {
                var filePath = $(this).val();
                if (this.files[0].size > 31457280) {
                    // $("#msgModalWarning .modal-msg-title").text("");
                    // $("#msgModalWarning .modal-msg-text").html("您的檔案超過30MB，請重新選擇！");
                    // $('#msgModalWarning').modal('show');
                    this.value = "";
                } else {
                    var arr = filePath.split("\\");
                    var fileName = arr[arr.length - 1];
                    $(this).parent().children(".js-file-name").text(fileName);
                    previewImg(this);
                }
            });
            function previewImg(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $(input).parent().children(".js-file-preview").css("background-image", "url(" + e.target.result + ")");
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            // loading cover
            var timer;
            $("#loadingCoverBtn").click(function () {
                $("#loadingContainer").fadeIn(100);
                $("body").css("overflow", "hidden");
                clearTimeout(timer);
                timer = setTimeout(function () {
                    $("#loadingContainer").fadeOut(300);
                    $("body").css("overflow", "auto");
                }, 5000);
            });
            $("#loadingCoverBtnOCR").click(function () {
                $("#loadingContainerOCR").fadeIn(100);
                $("body").css("overflow", "hidden");
                clearTimeout(timer);
                timer = setTimeout(function () {
                    $("#loadingContainerOCR").fadeOut(300);
                    $("body").css("overflow", "auto");
                }, 5000);
            });

            // progress bar
            let pic = 380;
            let allPic = 624;
            let precent = (pic / allPic) * 100;
            let $circle = $('#progress #bar');
            if (isNaN(precent)) {
                precent = 100;
            } else {
                let r = $circle.attr('r');
                let c = Math.PI * (r * 2);
                if (precent < 0) { precent = 0; }
                if (precent > 100) { precent = 100; }
                let pct = ((100 - precent) / 100) * c;
                $circle.css({ strokeDashoffset: pct });
                // $('#cont').attr('data-pct', precent);
                $("#progressPic").text(pic);
                $("#progressAllPic").text(allPic);
            }

            // toggle btn ---
            $('.js-toggle-btn').click(function () {
                const checkbox = $(this).find(':checkbox');
                const subscribeText = $(this).find(".toggle-text");
                checkbox.prop('checked', checkbox.prop('checked'));
                if(checkbox.prop('checked')){
                    subscribeText.text("已訂閱");
                }else {
                    subscribeText.text("已退訂");
                }
            });  
        });
    </script>
