            <img src="@Url.Content("~/Content/images/no-project.svg")" alt="尚無電廠專案" class="center img">
            <p class="solar--nosolar-text">
                <img src="@Url.Content("~/Content/images/s_bulb_icon.svg")" alt="Alternate Text" />
