@*
    MODAL: 忘記密碼
*@
<div class="modal fade" id="modalForgetPassword" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-forgetpw" role="document">
        <div class="modal-content ">
            <button type="button" class="modal-btn--close" data-dismiss="modal" aria-label="Close">
                <img src="@Url.Content("~/Content/images/bt_close_w.svg")" alt="">
            </button>
            @* 步驟1: 填表*@
            <form action="" class="modal-form--forgetpw">
                <p class="modal-content--title">忘記密碼</p>
                <div class="form-item">
                    <div class="input-group">
                        <input type="email" id="loginEmailForget" name="loginEmailForget" class="form-control has-btn-clear" placeholder="請輸入 E-mail" autocomplete="email" required>
                        <div class='js-input-btn-clear input-btn-clear'></div>
                    </div>
                </div>
                <div class="form-item">
                    <div class="input-group">
                        <input type="tel" id="otpTelInput1" name="otpTelInput1" class="form-control has-btn-clear" placeholder="請輸入手機號碼" autocomplete="tel" required>
                        <div class='js-input-btn-clear input-btn-clear'></div>
                    </div>
                </div>
                <div class="form-item">
                    <div class="input-group d-flex justify-content-center">
                        @*@Html.RecaptchaV2()*@
                        @Html.v2CheckecBox()
                    </div>
                </div>
                <button class="center btn--common btn--common-1 btn--form-send">送出</button>
            </form>
            @* 步驟2: 結果*@
            <div class="modal-password--result ">
                <img src="@Url.Content("~/Content/images/normal_info_icon.svg")" alt="" class="center signup-success--icon">
                <p class="modal-password--result--title">密碼重設信已送出</p>
                <p class="modal-password--result--text">
                    <img src="@Url.Content("~/Content/images/s_bulb_icon.svg")" alt="" srcset="">
                    您的Email 確認信已發送至：
                    <span>mi0921@test.com</span>
                </p>
                <button class="center btn--common btn--common-1 btn--form-send">完成</button>
            </div>
        </div>
    </div>
</div>

<script>
    const forgetPasswordUrl = '@Url.Action("ForgetPassword", "Account")';
</script>