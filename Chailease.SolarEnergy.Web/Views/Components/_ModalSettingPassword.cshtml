@*
    MODAL: 設定登入密碼
*@
<div class="modal fade" id="modalSettingPassword" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-setting-password" role="document">
        <div class="modal-content">
            <button type="button" class="modal-btn--close" data-dismiss="modal" aria-label="Close">
                <img src="@Url.Content("~/Content/images/bt_close_w.svg")" alt="">
            </button>
            @* 步驟1: 填表*@
            <form action="" class="modal-form--setting-password">
                <p class="modal-content--title">設定登入密碼</p>
                <div class="form-item">
                    <div class="input-group input-group--password">
                        <input type="password" id="signin-passwordSetting" name="signin-passwordSetting" class="form-control" placeholder="請輸入密碼"
                               autocomplete="new-password" required>
                        <a href="#0" class="js-hide-password hide-password"></a>
                    </div>
                </div>
                <div class="form-item">
                    <div class="input-group input-group--password">
                        <input type="password" id="signin-passwordSetting2" name="signin-passwordSetting2" class="form-control" placeholder="請輸入密碼"
                               autocomplete="new-password" required>
                        <a href="#0" class="js-hide-password hide-password"></a>
                        <p class="input-care-info">需包含大小寫字母、數字、長度 8~12 字母之間</p>
                    </div>
                </div>
                <button class="center btn--common btn--common-1 btn--form-send">下一步</button>
            </form>
            @* 步驟2: 結果*@
            <div class="modal-setting-password--result ">
                <p class="modal-setting-password--result--title">設定登入密碼</p>
                <img src="@Url.Content("~/Content/images/success_info_icon.svg")" alt="" class="center signup-success--icon">
                <p class="modal-setting-password--result--text">密碼設定已完成</p>
                <button class="center btn--common btn--common-1 btn--form-send">完成</button>
                <p class="care-text">確認完成後將帶回登入頁</p>
            </div>
        </div>
    </div>
</div>

<script>
    const settingPasswordUrl = '@Url.Action("EditPassword", "Account")';
</script>
